{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    // 将根目录设为上一级，使得 `shared` 文件夹包含在内
    "baseUrl": "../",
    // 确保使用顶层路径配置
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "../shared/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}