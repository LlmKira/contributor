{
  "apps": [
    {
      "name": "contributor-backend",
      "script": "sleep 1 && pnpm install && pnpm run start:backend",
      "instances": 1,
      "max_restarts": 3,
      "restart_delay": 10000,
      "exp_backoff_restart_delay": 100,
      "error_file": "error.log",
      "out_file": "/dev/null",
      "log_date_format": "YYYY-MM-DD HH-mm-ss"
    },
    {
      "name": "contributor-app",
      "script": "pdm install&&pdm run python main.py",
      "instances": 1,
      "max_restarts": 3,
      "restart_delay": 10000,
      "exp_backoff_restart_delay": 100,
      "error_file": "error.log",
      "out_file": "/dev/null",
      "log_date_format": "YYYY-MM-DD HH-mm-ss"
    },
    {
      "name": "contributor-webhook",
      "script": "sleep 1 && pnpm install && pnpm run start:webhook",
      "instances": 1,
      "max_restarts": 3,
      "restart_delay": 10000,
      "exp_backoff_restart_delay": 100,
      "error_file": "error.log",
      "out_file": "/dev/null",
      "log_date_format": "YYYY-MM-DD HH-mm-ss"
    }
  ]
}
